<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D4F3D4"
    android:orientation="vertical"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"

        app:cardBackgroundColor="#FFFFFF">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">


            <TextView
                android:id="@+id/_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/customer_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="57dp"
                android:text="Antti asiakas"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/_id_txt" />

            <TextView
                android:id="@+id/customer_company_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Yritys oy"
                android:textAllCaps="false"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/customer_name_txt"
                app:layout_constraintTop_toTopOf="@+id/customer_name_txt" />

            <TextView
                android:id="@+id/customer_city_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:text="SeinÃ¤joki"
                android:textSize="15sp"
                android:textAllCaps="false"
                app:layout_constraintStart_toEndOf="@+id/customer_email_txt"
                app:layout_constraintTop_toTopOf="@+id/customer_email_txt" />

            <TextView
                android:id="@+id/customer_phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="040123123"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/customer_company_txt"
                app:layout_constraintTop_toBottomOf="@+id/customer_name_txt" />

            <TextView
                android:id="@+id/customer_email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:text="antti.asiakas@firma.fi"
                android:textSize="15sp"
                android:textAllCaps="false"
                app:layout_constraintStart_toEndOf="@+id/customer_phone_txt"
                app:layout_constraintTop_toTopOf="@+id/customer_phone_txt" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>